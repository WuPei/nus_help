<% provide(:title, 'All users') %>
<% content_for :content do %>
  <h1>
    All Users</h1>
    <div class="row-fluid">
    <div id="user_switch" >
      <input type="button" value="Show other users" onClick="history.go(0)", class="btn btn-primary">
  </div>
</div>
  <div>
    <%= render @users %>
  </div>
  <%= will_paginate @users %>
<% end %>
<% content_for :firstsidebar do %>
  <%= render 'layouts/sidebar' %>
<% end %>
<% content_for :secondsidebar do %>
  <%= render 'popularusers' %>
<% end %>

