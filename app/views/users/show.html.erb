<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
        <% if @user.photo="0" %>
          <% if @user.gender == 0 %>
            <%= image_tag "man.jpeg" , :size => "150x150", :crop => :fill%>
          <% else %>
            <%= image_tag "women.jpeg" , :size => "150x150", :crop => :fill%>
          <% end %> 
        <% else %>
          <%= image_tag @user.photo, :size => "150x150", :crop => :fill%>
        <% end %>

        <%= @user.name %>
        <% if @user.gender == 0 %>
          <%= image_tag "male_arrow.jpeg", :size => "15x15", :crop => :fill %>
        <% else %>
          <%= image_tag "female_arrow.svg", :size => "15x15", :crop => :fill %>
        <% end %>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render :partial => 'microposts/micropost', :collection => @microposts%>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
