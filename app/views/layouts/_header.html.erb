<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "NUS HELP", root_path, id: "logo" %>
      <ul class="nav">
        <li><%= link_to "Home", root_path %></li>
        <% if signed_in? %>
          <li><%= link_to "Modules", nus_modules_path %></li>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown fat-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account<b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
            </ul>
          </li>
          <li id="fat-menu" class="dropdown">
            <% followed_user_ids = "SELECT followed_id FROM relationships
                          WHERE follower_id = :user_id" %>
            <% @activities = PublicActivity::Activity.order("created_at desc").where("owner_id IN (#{followed_user_ids})", user_id: current_user.id) %>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="icon-th-list"></i>
              <%= unreadNum(@activities) %>
            </a>
            <ul class="dropdown-menu mydropdown-menu"><%= link_to "" ,activities_path %>
              <%= render :partial=>'activities/dropdownList', :collections => @activities%>
            </ul>
          </li>
        <% end %>
      </ul>
      <% if signed_in? %>
        <%= form_tag ('/search'), :method => :get, :class=> "navbar-search pull-right" do %>
          <%= text_field_tag :search,params[:search], :class=>"input-medium search-query", :placeholder => "Search" %>
          <%= button_tag :name=>nil, :type => "submit", :class => "btn" do%>
            <i class="icon-search "></i>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</header>
