<ol class="comments">
  <% if micropost.help_recs.any? %>
    <% micropost.help_recs.each do |h| %>
      <li>
        <div class="help-self">
          <div class="photo">
            <%= gravatar_for (User.find_by_id(h.helper_id)), {size: 70} %>
          </div>
          <div class="help-content">
            <span class="comment">
              <%=link_to User.find_by(:id => h.helper_id ).name,  User.find_by(:id => h.helper_id )%>
              :
              <%= h.helper_comment %> 
            </span>
            <span class="timestamp">
              <%= time_ago_in_words(h.created_at) %>
              ago
            </span>     
            <span class="feedback">
              Feedback: <%= h.feedback_comment %>
            </span>
         </div>   
            <div id="contact_info">
              Contact: <%= h.contact_info %>
            </div>
           <div id="thanks">
              <a class="btn-small btn-primary" type="button" href="#test_modal" data-toggle="modal" data-id=<%= h.id%> title="add this item" class="open_add_thanks">Thanks </a> 
             <%= h.owner_comment %> 
          </div> 
        </div>
      </li>
    <% end %>
  <% else %>
    These is no guys helping you
  <% end %>
</ol>

<div class="modal fade" id="test_modal">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">&times;</a>
    <h3>Thanks</h3>
  </div>
  <div class="modal-body">
    <%= form_tag update_helpRec_url do %>
      <%= hidden_field_tag :rec_id %>
      <%= label_tag :owner_comment %>
      <%= text_field_tag :owner_comment %>
        <%= submit_tag "Thanks" ,class: "btn btn-small btn-primary" %>
    <% end %>
  </div>
</div>