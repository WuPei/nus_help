<% if @comments.any? %>
 <div class="comment_status">
  <span id="comment_no">
    Online Help(<%= @comments.count %>) &nbsp;
  </span>  
  <strong class="snow">|</strong>
  <span id="comment_curtime">
     &nbsp;
    Until <%= Time.now %>
  </span>
  </div>
  <div class="comments">
    <% @comments.each do |comment| %>
     <table cellpadding="0" cellspacing="0" border="0" width="100%">
        <tbody><tr>
            <td width="48" valign="top" align="center">
              <%= render "users/user_photo", {user:User.find_by(:id=>comment.user_id),size:30,need_div:false} %>
            </td>
            <td width="10" valign="top"></td>
            <td width="auto" valign="top" align="left">
        
        <div class="comment_name">
              <%= User.find_by(:id=>comment.user_id).name%>
         </div>
        <div class="timestamp" id="comment_timestamp">
          <%= time_ago_in_words(comment.created_at) %>
          ago
        </div>    
      <div class="comment_content">
        <%= h(comment.content).gsub(/(?:\n\r?|\r\n?)/, '<br/>').html_safe %>
       </div> 
        <% if current_user.id == comment.user_id %>
          <div class="comment_delete">
            <%= link_to "delete", [micropost,comment] , method: :delete,
                                     title: comment.content %>
         </div>  
        <% end %>
            </td>
        </tr>
    </tbody>
  </table>
    <% end %>
      </div>
  </ol>
  <%= will_paginate @comments %>

  </br>
  
<% end %>
