<% provide(:title, 'Create Module') %>
<h1>Create a Module</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@nus_module) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :code %>
      <%= f.text_field :code %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.submit "Create a new Module", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>