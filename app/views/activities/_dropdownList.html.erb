<div class="notification">
  <div id="notificationTitle">
    <h5>Notifications</h5>
    <strong><%= link_to "See All",activities_path, {:style => 'color: gray'} %>
    </strong>
  </div>
  <div id="notificationBody" >
    <% @activities.each do |activity| %>
      <% if activity.trackable && activity.owner %>
        <div class="activity">
          <div class = "user_image">
            <%= link_to gravatar_for(activity.owner, {:size =>40 }), activity.owner %>
          </div>
          <div class="activity_body">
            <strong><%= link_to activity.owner.name, activity.owner, {:style=>"color:black"} %></strong>
            <%= render_activity activity %>
            <span class="timestamp">
              <%= time_ago_in_words(activity.created_at ) %>
            </span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
