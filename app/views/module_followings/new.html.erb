<% if current_user %>
<div class="well">
  <% if current_user.mods.any? %>
    <h4>Modules I'm Following:</h4>
    <div class="module-tags">
    <% current_user.mods.each do |m| %>
    <span class="module-tag needToolTip"> <%= link_to m.code, m ,:title=>m.name%><a class="close needToolTip unfollow" title="Unfollow">x</a></span>
    <% end %>
    </div>
  <% else %>
  <h4>You're not following any module yet.</h4>
  <div class="module-tags">
    </div>
  <% end %>

  <div class="search-query">
    <%= form_tag nus_modules_path, :method => 'get' do %>
      
      <div id="resize_box">   
     <%= text_field_tag :searchm ,params[:searchm], data: {autocomplete_source: module_list_url}, placeholder: "Filling any modules you want to follow" %>
    </div>
      <div id="hide_submit">
      <%= submit_tag "Search", :name => nil  %>
    </div>
    <% end %>
  </div>

</div>
<% end %>


<%= link_to "Finish", @user %>